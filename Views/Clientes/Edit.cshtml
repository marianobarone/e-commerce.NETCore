@model BENT1C.Grupo1.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Datos</h1>

<hr />

<div class="container">


    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-12 row">

            <div class="col-md-8 list-group">

                <div class="form-group row list-group-item ">
                    <label asp-for="Dni" class="col-form-label col-md-2"></label>
                    <input asp-for="Dni" class="form-control col-md-10" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <div class="form-group row list-group-item ">
                    <label asp-for="Nombre" class="col-form-label col-md-2"></label>
                    <input asp-for="Nombre" class="form-control col-md-10" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group row list-group-item ">
                    <label asp-for="Apellido" class="col-form-label col-md-2"></label>
                    <input asp-for="Apellido" class="form-control col-md-10" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group row list-group-item ">
                    <label asp-for="Email" class="col-form-label col-md-2"></label>
                    <input asp-for="Email" class="form-control col-md-10" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group row list-group-item ">
                    <label asp-for="Telefono" class="col-form-label col-md-2"></label>
                    <input asp-for="Telefono" class="form-control col-md-10" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group row list-group-item ">
                    <label asp-for="Direccion" class="col-form-label col-md-2"></label>
                    <input asp-for="Direccion" class="form-control col-md-10" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group row list-group-item ">
                    <label asp-for="Password" class="col-form-label col-md-2"></label>
                    <input asp-for="Password" type="password" class="form-control col-md-10" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>


            <div class="col-md-4">
                <div class="d-flex justify-content-center row">

                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Cancelar</a>

                </div>
            </div>
        </div>
    </form>
</div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
