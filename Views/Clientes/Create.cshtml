@model BENT1C.Grupo1.Models.Cliente

@{
    ViewData["Title"] = "Agregar producto";
}

@*<h1>Create</h1>*@
<h1 class="text-center">Ingresá tus datos</h1>

@*<h4>Cliente</h4>*@
<hr />
<div class="row">
    <div class="container">
        <form asp-action="Create">
            <div class="card form-row formSpace col-md-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ingrese su apellido" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Dni" class="control-label"></label>
                        <input asp-for="Dni" class="form-control" placeholder="Ingrese su DNI" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingrese su telefono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ingrese su direccion" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese su email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row d-flex justify-content-center">
                    <div class="form-group col-md-6 text-center">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password"  type="password" class="form-control" placeholder="Ingrese su password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />

            @*<div class="d-flex justify-content-center">*@
        <div class="form-group" align="center">
            @*<button type="submit" class="btn btn-primary">Crear cuenta</button>*@
            <input type="submit" value="Crear cuenta" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
